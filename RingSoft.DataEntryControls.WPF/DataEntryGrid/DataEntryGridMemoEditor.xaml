<local:BaseWindow x:Class="RingSoft.DataEntryControls.WPF.DataEntryGrid.DataEntryGridMemoEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RingSoft.DataEntryControls.WPF"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Title="DataEntryGridMemoEditor" Height="300" Width="400">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <local:DataEntryMemoEditor x:Name="MemoEditor" Margin="0,0,0,5"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="_OK" Width="100" Margin="0,0,5,0"/>
            <Button x:Name="CancelButton" Content="_Cancel" Width="100"/>
        </StackPanel>
    </Grid>
</local:BaseWindow>
