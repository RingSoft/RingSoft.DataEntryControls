<UserControl x:Class="TestDummyApp.LineTypeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestDummyApp"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="150">
    <Grid>
        <ComboBox x:Name="ComboBox" IsTextSearchEnabled="True">
            <ComboBoxItem x:Name="InventoryItem" IsSelected="True">
                <ContentPresenter ContentTemplate="{StaticResource InventoryPanel}"/>
            </ComboBoxItem>
            <ComboBoxItem x:Name="NonInventoryItem">
                <ContentPresenter ContentTemplate="{StaticResource NonInventoryPanel}"/>
            </ComboBoxItem>
            <ComboBoxItem x:Name="CommentItem">
                <ContentPresenter ContentTemplate="{StaticResource CommentPanel}"/>
            </ComboBoxItem>
        </ComboBox>
    </Grid>
</UserControl>
