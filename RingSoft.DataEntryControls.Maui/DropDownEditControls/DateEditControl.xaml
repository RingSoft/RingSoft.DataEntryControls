<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RingSoft.DataEntryControls.Maui.DateEditControl">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Entry x:Name="TextBox" VerticalTextAlignment="Center"/>
        <Button x:Name="DropDownButton" Grid.Column="1" WidthRequest="16" HeightRequest="16" VerticalOptions="Center" ImageSource="datepicker16.png" />
    </Grid>

</ContentView>
