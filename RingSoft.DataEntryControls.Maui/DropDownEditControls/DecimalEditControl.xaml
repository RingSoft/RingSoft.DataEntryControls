<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:local="clr-namespace:RingSoft.DataEntryControls.Maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RingSoft.DataEntryControls.Maui.DecimalEditControl">

    <ContentView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <local:DataEntryControlStyles/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </ContentView.Resources>

    <ContentView.ControlTemplate>
        <ControlTemplate>
            <HorizontalStackLayout>
                <Entry x:Name="Entry" WidthRequest="100" Keyboard="Numeric"/>
                <ImageButton x:Name="Button" Source="{StaticResource DecimalEditImage}" WidthRequest="20"/>
            </HorizontalStackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
