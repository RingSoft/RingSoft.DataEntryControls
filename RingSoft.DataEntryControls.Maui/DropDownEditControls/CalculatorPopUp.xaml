<?xml version="1.0" encoding="utf-8" ?>
<ctk:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:ctk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
           xmlns:dec="clr-namespace:RingSoft.DataEntryControls.Maui;assembly=RingSoft.DataEntryControls.Maui"
           x:Class="RingSoft.DataEntryControls.Maui.CalculatorPopUp"
           CanBeDismissedByTappingOutsideOfPopup="False">

    <VerticalStackLayout Background="Gray" Margin="5">

        <dec:CalculatorControl x:Name="CalculatorControl"/>

        <HorizontalStackLayout HorizontalOptions="End">

            <Button x:Name="OkButton" Text="OK"/>

            <Button x:Name="CancelButton" Text="Cancel"/>

        </HorizontalStackLayout>
    </VerticalStackLayout>
</ctk:Popup>