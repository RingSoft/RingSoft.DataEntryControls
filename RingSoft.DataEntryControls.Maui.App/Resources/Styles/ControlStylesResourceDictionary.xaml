<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dec="clr-namespace:RingSoft.DataEntryControls.Maui;assembly=RingSoft.DataEntryControls.Maui">

    <ResourceDictionary.MergedDictionaries>
        <dec:DataEntryControlStyles/>
        <ResourceDictionary Source="/Resources/Styles/BrushesResourceDictionary.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="ContentPage" x:Key="PageStyle">
        <Setter Property="Background" Value="{StaticResource PageBackgroundBrush}"/>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}"/>
    </Style>

    <Style TargetType="ImageButton">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
    </Style>
    
    <Style TargetType="DatePicker">
        <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}"/>
    </Style>

    <Style TargetType="TimePicker">
        <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}"/>
    </Style>

</ResourceDictionary>