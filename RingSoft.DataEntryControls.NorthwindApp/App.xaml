<Application x:Class="RingSoft.DataEntryControls.NorthwindApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lc="clr-namespace:RingSoft.DbLookup.Controls.WPF;assembly=RingSoft.DbLookup.Controls.WPF"
             xmlns:deg="clr-namespace:RingSoft.DataEntryControls.WPF.DataEntryGrid;assembly=RingSoft.DataEntryControls.WPF"
             xmlns:dec="clr-namespace:RingSoft.DataEntryControls.WPF;assembly=RingSoft.DataEntryControls.WPF"
             xmlns:lib="clr-namespace:RingSoft.DataEntryControls.NorthwindApp.Library;assembly=RingSoft.DataEntryControls.NorthwindApp.Library"
             xmlns:local="clr-namespace:RingSoft.DataEntryControls.NorthwindApp">
    <Application.Resources>
        <local:NorthwindGridEditHostFactory x:Key="EditHostFactory"/>
        <lc:ComparisonConverter x:Key="ComparisonConverter"/>

        <Style TargetType="dec:DecimalEditControl">
            <Setter Property="CultureId" Value="{Binding Source={x:Static lib:AppGlobals.NumberCultureId}}" />
        </Style>

        <Style TargetType="dec:DateEditControl" x:Key="DateEditControlGlobals">
            <Setter Property="EntryFormat" Value="{Binding Source={x:Static lib:AppGlobals.DateEntryFormat}}"/>
            <Setter Property="DisplayFormat" Value="{Binding Source={x:Static lib:AppGlobals.DateDisplayFormat}}"/>
            <Setter Property="CultureId" Value="{Binding Source={x:Static lib:AppGlobals.DateCultureId}}"/>
        </Style>
        <Style TargetType="dec:DateEditControl" BasedOn="{StaticResource DateEditControlGlobals}"/>

        <Style TargetType="dec:ReadOnlyBox" x:Key="ReadOnlyBox">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="2.5"/>
        </Style>
        <Style TargetType="dec:StringReadOnlyBox" BasedOn="{StaticResource ReadOnlyBox}"/>

        <Style TargetType="dec:DecimalReadOnlyBox" x:Key="DecimalReadOnlyBoxGlobals" BasedOn="{StaticResource ReadOnlyBox}">
            <Setter Property="CultureId" Value="{Binding Source={x:Static lib:AppGlobals.NumberCultureId}}"/>
        </Style>
        <Style TargetType="dec:DecimalReadOnlyBox" BasedOn="{StaticResource DecimalReadOnlyBoxGlobals}"/>

        <Style TargetType="Label" x:Key="ControlLabel">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <!--<Setter Property="Margin" Value="2.5"/>-->
        </Style>
        <Style TargetType="TextBox" x:Key="StandardTextBox">
            <Setter Property="Height" Value="20"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="PasswordBox" x:Key="StandardPasswordBox">
            <Setter Property="Height" Value="20"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox" x:Key="DatabaseComboBox">
            <Setter Property="Height" Value="23"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="IsEditable" Value="True"/>
        </Style>
        
        <Style TargetType="deg:DataEntryGrid">
            <Setter Property="ControlHostFactory" Value="{StaticResource EditHostFactory}"/>
            <Setter Property="EnterToTab" Value="True"/>
            <Setter Property="CancelEditOnEscape" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="AlternationCount" Value="2"/>
        </Style>
        <Style TargetType="{x:Type DataGridRow}">
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                    <Setter Property="Background" Value="Aqua" />
                </Trigger>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock TextAlignment="Center" Text="{Binding}"></TextBlock>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
